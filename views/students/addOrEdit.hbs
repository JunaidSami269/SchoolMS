<h3>{{viewTitle}}</h3>

<form action="/student" method="post">
    <input type="hidden" name="_id" value="{{student._id}}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>First Name</label>
            <input type="text" class="form-control" name="first_name" placeholder="First Name" value="{{studetnt.first_name}}">
        </div>
        <div class="form-group col-md-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="last_name" placeholder="Last Name" value="{{studetnt.last_name}}">
        </div>
        
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>DOB</label>
            <input type="text" class="form-control" name="dob" placeholder="DOB" value="{{studetnt.dob}}">
        </div>
        <div class="form-group col-md-6">
            <label>Grade</label>
            <input type="text" class="form-control" name="grade" placeholder="Grade" value="{{studetnt.grade}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Department</label>
            <input type="text" class="form-control" name="department" placeholder="Department"
                value="{{student.department}}">
        </div>
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{student.mobile}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>